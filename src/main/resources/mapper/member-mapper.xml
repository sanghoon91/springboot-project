<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.green.nowon.domain.dao.MemberMapper">
<insert id="save" parameterType="com.green.nowon.domain.dto.MemberDTO" useGeneratedKeys="true" keyProperty="no">
	insert into member(member, password, name, email, phone, birth)
	values(#{member}, #{password}, #{name}, #{email}, #{phone}, #{birth})
</insert>


<select id="findByMember" resultType="com.green.nowon.domain.dto.MemberDTO">
	select * from member where member=#{member}
</select>

<insert id="saveRole">
	insert into MyRole(role,member_no) values(#{role},#{memberNo})
</insert>

</mapper>