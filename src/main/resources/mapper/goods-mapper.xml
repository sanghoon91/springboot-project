<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.green.nowon.domain.dao.GoodsMapper">
	
	<!-- goods테이블에 데이터 저장후 auto_increament된 no의 pk값을 GoodsSaveDTO에도 저장한다. -->
	<insert id="save" useGeneratedKeys="true" keyProperty="no" parameterType="com.green.nowon.domain.dto.GoodsSaveDTO">
		insert into products(name,price,content)
		values(#{title},#{price},#{content})
	</insert>
	<insert id="saveImage">
		insert into products_image(bucket_key, org_name, def, gno)
		values(#{bucketKey}, #{orgName}, #{def}, #{gno})
	</insert>
	<select id="findAll" resultType="com.green.nowon.domain.dto.GoodsListDTO">
		select * from products p
		join products_image i on p.no=i.gno
		where i.def=1
	</select>
	<select id="detail" resultType="com.green.nowon.domain.dto.GoodsDetailDTO">
		select * from products where no=#{goodsNo}
	</select>
	<select id="imageByDetailNo" resultType="com.green.nowon.domain.dto.GoodsImgListDTO">
		select * from products_image where gno=#{goodsNo}
	</select>
</mapper>